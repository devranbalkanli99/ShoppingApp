@model ProductListViewModel


@section Footer {
    <div>
        Only for Index Footer
    </div>
}

@{
    var categories = await Component.InvokeAsync("CategoriesMenu");
    var productFilterMenu = await Component.InvokeAsync("ProductFilterMenu");
}

<div class="row">
    <div class="col-md-3">
        @categories
        @productFilterMenu
        <div products="" number="3"></div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (Entities.Models.Product prd in Model.Products)
            {
                <partial name="_ProductCard" model="@prd" />
            }
        </div>
        <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
            page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group">

        </div>
    </div>
</div>
